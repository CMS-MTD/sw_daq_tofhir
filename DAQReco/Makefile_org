CXX = $(shell root-config --cxx)
LD = $(shell root-config --ld)
INC = $(shell pwd)
Repo = $(shell git rev-parse --show-toplevel)
SRC = $(Repo)/src

CPPFLAGS := $(shell root-config --cflags) -I$(INC)/include
LDFLAGS := $(shell root-config --glibs)
CPPFLAGS += -g -std=c++1y

TARGET = ConvertTOFPETSinglesToEvents
SRC = ConvertTOFPETSinglesToEvents.cc
OBJ = $(SRC:.cc=.o)
head= Tofhir.h

TARGETvme =  ConvertTOFPETSinglesToEventsWithVME
SRCvme = ConvertTOFPETSinglesToEventsWithVME.cc
OBJvme = $(SRCvme:.cc=.o)



#all : $(TARGET) $(TARGETvme)
all :  $(TARGET) $(TARGETvme)


#$(TARGET) : $(OBJ)
#	@echo $@
#	$(LD) $(CPPFLAGS) -o $(TARGET) $(OBJ) $(head) $(LDFLAGS) 


$(TARGETvme) : $(OBJvme)
	@echo $@
	$(LD) $(CPPFLAGS) -o $(TARGETvme) $(OBJvme) $(head) $(LDFLAGS)



%.o : %.cc
	@echo $@
	$(CXX) $(CPPFLAGS) -o $@ -c $<
clean :
	rm -f *.o $(TARGET) $(TARGETvme) *~
